{
  "version": 1,
  "defaultAction": "allow",
  "ruleGroups": {
    "destructive-shell": { "enabled": true, "action": "deny" },
    "dangerous-git": { "enabled": true, "action": "deny" },
    "secrets-exposure": { "enabled": true, "action": "deny" },
    "production-risk": { "enabled": true, "action": "deny" }
  },
  "customRules": [],
  "llmFallback": {
    "enabled": true,
    "maxTokens": 150,
    "confidenceThreshold": 0.7,
    "providerChain": [
      { "type": "anthropic", "model": "claude-haiku-4-5-20251001", "timeoutSeconds": 2 },
      { "type": "github-models", "model": "gpt-4o-mini", "timeoutSeconds": 2 },
      { "type": "openai", "model": "gpt-4o-mini", "timeoutSeconds": 2 },
      { "type": "ollama", "endpoint": "http://localhost:11434", "model": "llama3:8b", "timeoutSeconds": 3 }
    ]
  },
  "logging": {
    "enabled": false,
    "path": ".bouncer/audit.log",
    "level": "denials-only"
  }
}
